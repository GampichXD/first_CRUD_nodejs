<%- include('layout/header') %>

<div class="container">
    <!-- Tombol Logout -->
    <div class="d-flex justify-content-end mt-3">
        <a href="/logout" id="logout-link" class="btn btn-danger">Logout</a>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %> "
                    role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (users.length > 0) { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Gambar</th>
                                <th>Nama</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Level_User</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %></td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail" ></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td><%= row.username %></td>
                                    <td><%= row.password %></td>
                                    <td><%= row.level_user %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">Tidak ada user yang ditemukan dalam database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>



<%- include('layout/footer') %>
